					$("#whoAmI").fadeIn("slow");
				} else {
					$("#whoAmI").stop().fadeOut("slow");
				}
				
				if ($(this).scrollTop() > 900) {
					$(".text_area_b").fadeIn("slow");
				} else {
					$(".text_area_b").stop().fadeOut("slow");
				}
			});
